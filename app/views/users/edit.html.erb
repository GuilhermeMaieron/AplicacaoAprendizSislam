<div class="PerfilInfos">
  <%= form_for @user do |l| %>

    <p class="InfosPerfilson">
      <strong>Nome de Usu√°rio: </strong>
      <%= l.text_field :username, class:'trecoupdate'%>
    </p>
    <br>
    <p class="InfosPerfilson">

      <strong>Email: </strong>
      <%= l.text_field :email, class:'trecoupdate' %>
    </p>
    <br>
    <p class="InfosPerfilson">

      <strong>Data de Nascimento: </strong>
      <%= l.date_field :idade, class:'trecoupdate' %>
    </p>
    <br>
    <% if current_user.id == @user.id %>
    <p class="InfosPerfilson">

      <strong>Senha: </strong>
      <%= l.text_field :senha, class:'trecoupdate' %>
    </p>
    <%end%>

    <p>
      <%= l.label 'Foto de Perfil (Somente URL)'%><br>
      <%= l.text_field :imgurl, id:'Txt' , class:'trecoupdate'%>
      <input type="button" name="Botao" value="Testar Imagem" onclick='mostrarimagem()'>
    </p>
    <% if current_user.admin %>
    <p>
      <%= l.label 'Admin?'%><br>
      <%= l.check_box :admin %>
    </p>
    <%end%>

    <p>
    <%= l.submit %>
    </p>
    <%end %>




</div>

<div class="PerfilImagen">
  <%= image_tag @user.imgurl, class:"ImagemMesmo", id:'ImageTest' %>
  <div class="DeletarEditar">

    <div class="">
        <%= link_to 'Voltar', user_path(current_user), class:'Novo' %>
    </div>
    <div class="">
      <br> <br><br> <br><br> <br><br> <br><br> <br><br> <br><br> <br><br> <br><br> <br>
      <%= link_to 'Deletar Conta', user_path(current_user),
                   method: :delete, data: { confirm: 'Are you sure?' } , class:'Novo'%>
    </div>



  </div>
</div>
